@page
@model Pages.Teams.DetailsModel
@{
	ViewData["Title"] = "Team Details";
}

<div class="text-center">
	<h1 class="display-4">
		<img src="~/image/nfl/logo/@(Model.Team.TeamId.ToLower()).png">
		@Model.Team.Name
	</h1>
	<hr />
	<img src="~/image/nfl/stadium/@(Model.Team.TeamId.ToLower()).jpg">
	<hr />
	<img src="~/image/nfl/seating/@(Model.Team.TeamId.ToLower()).png">
</div>

<div>
	<h2>Team Details</h2>	
	<hr />
	<dl class="row">
		<dt class="col-sm-2">@Html.DisplayNameFor(model => model.Team.DivisionId)</dt>
		<dd class="col-sm-10">@Html.DisplayFor(model => model.Team.DivisionId)</dd>

		<dt class="col-sm-2">@Html.DisplayNameFor(model => model.Team.Location)</dt>
		<dd class="col-sm-10">@Html.DisplayFor(model => model.Team.Location)</dd>

		<dt class="col-sm-2">@Html.DisplayNameFor(model => model.Team.Name)</dt>
		<dd class="col-sm-10">@Html.DisplayFor(model => model.Team.Name)</dd>

		<dt class="col-sm-2">@Html.DisplayNameFor(model => model.Team.Win)</dt>
		<dd class="col-sm-10">@Html.DisplayFor(model => model.Team.Win)</dd>

		<dt class="col-sm-2">@Html.DisplayNameFor(model => model.Team.Loss)</dt>
		<dd class="col-sm-10">@Html.DisplayFor(model => model.Team.Loss)</dd>

		<dt class="col-sm-2">@Html.DisplayNameFor(model => model.Team.Tie)</dt>
		<dd class="col-sm-10">@Html.DisplayFor(model => model.Team.Tie)</dd>

		<dt class="col-sm-2">@Html.DisplayNameFor(model => model.Team.PointsFor)</dt>
		<dd class="col-sm-10">@Html.DisplayFor(model => model.Team.PointsFor)</dd>
		
		<dt class="col-sm-2">@Html.DisplayNameFor(model => model.Team.PointsAgainst)</dt>
		<dd class="col-sm-10">@Html.DisplayFor(model => model.Team.PointsAgainst)</dd>

		<dt class="col-sm-2">@Html.DisplayNameFor(model => model.Team.Stadium)</dt>
		<dd class="col-sm-10">@Html.DisplayFor(model => model.Team.Stadium)</dd>

		<dt class="col-sm-2">@Html.DisplayNameFor(model => model.Team.Capacity)</dt>
		<dd class="col-sm-10">@Html.DisplayFor(model => model.Team.Capacity)</dd>

		<dt class="col-sm-2">@Html.DisplayNameFor(model => model.Team.Address)</dt>
		<dd class="col-sm-10">@Html.DisplayFor(model => model.Team.Address)</dd>

		<dt class="col-sm-2">@Html.DisplayNameFor(model => model.Team.City)</dt>
		<dd class="col-sm-10">@Html.DisplayFor(model => model.Team.City)</dd>

		<dt class="col-sm-2">@Html.DisplayNameFor(model => model.Team.State)</dt>
		<dd class="col-sm-10">@Html.DisplayFor(model => model.Team.State)</dd>

		<dt class="col-sm-2">@Html.DisplayNameFor(model => model.Team.Zip)</dt>
		<dd class="col-sm-10">@Html.DisplayFor(model => model.Team.Zip)</dd>

		<dt class="col-sm-2">@Html.DisplayNameFor(model => model.Team.Latitude)</dt>
		<dd class="col-sm-10">@Html.DisplayFor(model => model.Team.Latitude)</dd>

		<dt class="col-sm-2">@Html.DisplayNameFor(model => model.Team.Longitude)</dt>
		<dd class="col-sm-10">@Html.DisplayFor(model => model.Team.Longitude)</dd>
	</dl>
</div>

<div>
	<h2>Players</h2>
	<hr />
	<table>
		<thead>
			<tr>
				<th>@Html.DisplayNameFor(model => model.Team.Players.FirstOrDefault().Number)</th>
				<th>@Html.DisplayNameFor(model => model.Team.Players.FirstOrDefault().Position)</th>
				<th>@Html.DisplayNameFor(model => model.Team.Players.FirstOrDefault().Name)</th>
				<th>@Html.DisplayNameFor(model => model.Team.Players.FirstOrDefault().Height)</th>
				<th>@Html.DisplayNameFor(model => model.Team.Players.FirstOrDefault().Weight)</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var p in Model.Team.Players)
			{
				<tr>
					<td><a asp-page="/Players/Details" asp-route-id="@p.PlayerId">@Html.DisplayFor(model => p.Number)</a></td>
					<td><a asp-page="/Players/Details" asp-route-id="@p.PlayerId">@Html.DisplayFor(model => p.Position)</a></td>
					<td><a asp-page="/Players/Details" asp-route-id="@p.PlayerId">@Html.DisplayFor(model => p.Name)</a></td>
					<td><a asp-page="/Players/Details" asp-route-id="@p.PlayerId">@Html.DisplayFor(model => p.Height)</a></td>
					<td><a asp-page="/Players/Details" asp-route-id="@p.PlayerId">@Html.DisplayFor(model => p.Weight)</a></td>
				</tr>
			}			
		</tbody>
	</table>

</div>

<div>
	<a asp-page="./Index">Back to list</a>
</div>
